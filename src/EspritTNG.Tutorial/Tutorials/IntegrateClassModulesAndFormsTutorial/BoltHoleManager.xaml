<Window x:Class="TutorialCSharp.Tutorials.Tutorial_IntegrateClassModulesAndForms.BoltHoleManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TutorialCSharp.Tutorials.Tutorial_IntegrateClassModulesAndForms"
             mc:Ignorable="d" 
             Width="120"
             Height="140"
             ResizeMode="NoResize"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.Resources >
            <Style TargetType="Button" >
                <Setter Property="Margin" Value="0,5,0,0" />
                <Setter Property="Width" Value="100" />
            </Style>
        </Grid.Resources>

        <Button x:Name="CreateButton" Grid.Row="0" Content="Create"/>
        <Button x:Name="UpdateButton" Grid.Row="1" Content="Update"/>
        <Button x:Name="MoveButton"   Grid.Row="2" Content="Move"/>
        <Button x:Name="DeleteButton" Grid.Row="3" Content="Delete"/>
    </Grid>
</Window>
